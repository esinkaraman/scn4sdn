    </feature>

    <feature name="scn-cli" version="@FEATURE-VERSION"
             description="SCN admin command console components">
        <feature>onos-api</feature>
        <bundle>mvn:scn/scn-cli/@FEATURE-VERSION</bundle>
    </feature>

</features>
